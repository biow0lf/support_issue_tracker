%h1 Listing tickets

%table
  %thead
    %tr
      %th Email
      %th Summary
      %th Body
      %th Uid
      %th
      %th
      %th

  %tbody
    - @tickets.each do |ticket|
      %tr
        %td= ticket.email
        %td= ticket.summary
        %td= ticket.body
        %td= ticket.uid
        %td= link_to 'Show', ticket
        %td= link_to 'Edit', edit_ticket_path(ticket)
        %td= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Ticket', new_ticket_path

= icon('flag')
